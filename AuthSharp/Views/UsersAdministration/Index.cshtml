@model IEnumerable<AuthSharp.Models.ApplicationUser>

@{
    ViewBag.Title = "管理";
}

<h2>@ViewBag.Title</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrafficRemaining)
        </th>
        <th>
            充值请求
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.TrafficRemaining)*@
                <p>@item.TrafficRemaining</p>
            </td>

            <td>
                @item.RechargeRequests.Count 个
            </td>
            <td>
                @Html.ActionLink("修改密码", "SetPassword", new { id = item.Id }) |
                @Html.ActionLink("详细信息", "Details", new { id = item.Id }) |
                @Html.ActionLink("删除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
